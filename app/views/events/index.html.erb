<!doctype html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Eventbrite - Home</title>
    </head>

    
  <body>
  
  <main role="main">

  <!-- Main jumbotron for a primary marketing message or call to action -->
  <div class="jumbotron" 
    <div class="container">
      <h1 class="display-3">Welcome To The Best & Famous site</h1>
      <p>Bienvenue sur votre DASHBOARD. A vous la gloire!</p>
      <p><%= button_to "Crée un événement", new_event_path, class:"btn btn-primary btn-lg", :method => :get %></p>
    </div>
  </div>

  <center>

  <div class="all_events_title">
      <h1 style="font-size:40px;" >Tous les events </h1></br></br>
  </div>
  

 <div class="container" id="events_container"> 
  <div class="list-group">
   <% @list_events.each do |event| %>
    <%= link_to events_path(event.id), class: "list-group-item-action" do %>
      <div class="event_description">  
        <div class="text-center">
            <h5 class="mb-2">Event n°<%= event.id %> : <%= event.title %></h5></br>            
        </div> 
            <p class="mb-2"><%= event.description %></p>

      </div>
      <% end %>
   <% end %>
  </div>
</div>
 
</center> 
  </body>
 
</html>